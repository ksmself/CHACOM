\r\n  flex-direction: column;\r\n  align-items: center;\r\n  position: relative;\r\n  border: 3px solid #e8e8e8;\r\n  border-radius: 33px;\r\n  background-color: #ffffff;\r\n`;\r\n\r\nconst cancelBtn = css`\r\n  display: block;\r\n  width: 16px;\r\n  height: 16px;\r\n  position: absolute;\r\n  top: 13px;\r\n  right: 13px;\r\n  border: none;\r\n\r\n  span {\r\n    display: inline-block;\r\n    height: 16px;\r\n  }\r\n\r\n  svg {\r\n    font-size: 16px;\r\n    color: rgba(0, 0, 0, 0.45);\r\n  }\r\n`;\r\n\r\nconst toConvert = css`\r\n  width: 100%;\r\n  height: 100px;\r\n  padding: 16px;\r\n  resize: none;\r\n  font-size: 21px;\r\n  border: none;\r\n  border-top-left-radius: 33px;\r\n  border-top-right-radius: 33px;\r\n`;\r\n\r\nconst convertBtn = css`\r\n  display: block;\r\n  width: 48px;\r\n  height: 48px;\r\n  border-radius: 50%;\r\n  border-color: #3a18ff;\r\n  background-color: #3a18ff;\r\n\r\n  &:hover {\r\n    border-color: #3a18ff;\r\n    background-color: #3a18ff;\r\n  }\r\n\r\n  &:active {\r\n    border-color: #3a18ff;\r\n    background-color: #3a18ff;\r\n  }\r\n\r\n  span {\r\n    display: flex;\r\n    justify-content: center;\r\n    align-items: center;\r\n  }\r\n\r\n  svg {\r\n    font-size: 26px;\r\n    font-weight: 700;\r\n    color: #fff;\r\n\r\n    &:hover {\r\n      color: #fff;\r\n    }\r\n\r\n    &:active {\r\n      color: #fff;\r\n    }\r\n  }\r\n`;\r\n\r\nconst converted = css`\r\n  width: 100%;\r\n  height: 100px;\r\n  padding: 16px;\r\n  position: relative;\r\n  font-size: 21px;\r\n  border-bottom-left-radius: 33px;\r\n  border-bottom-right-radius: 33px;\r\n`;\r\n\r\nconst copyBtn = css`\r\n  position: absolute;\r\n  bottom: 13px;\r\n  right: 13px;\r\n`;\r\n\r\nconst ConvertPopUp = () => {\r\n  const pinyinRef = useRef(null);\r\n  const dispatch = useDispatch();\r\n  const { convertLoading, convertDone, convertedPinyin } = useSelector(\r\n    (state) => state.post\r\n  );\r\n\r\n  const [input, onChangeInput, setInput] = useInput('');\r\n\r\n  